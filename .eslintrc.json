{
    "env": {
        "browser": true,
        "es2021": true,
        "react-native/react-native": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "airbnb/hooks"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto"
            }
        ], 
        "import/no-unresolved": 0,
        "import/extensions": [
            "error",
            {
              "json": "always"
            }
        ]
    }, 
    "plugins": [
        "react",
        "react-native"
    ]
}
